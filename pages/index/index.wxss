.page-section {
  width: 100%;
  background-color: #fff;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  box-sizing: border-box;
}
.page-title {
  width: 100%;
  font-size: 40rpx;
  text-align: center;
  margin-bottom: 20rpx;
}
.row {
  width: 100%;
  display: flex;
  height: 100rpx;
}
.row text {
  width: 20%;
  text-align: center;
}
.row input {
  width: 80%;
  height: 60rpx;
  background-color: #ccc;
  padding-left: 10rpx;
}
.text-area {
  width: 100%;
}
.text-area textarea {
  margin-top: 10rpx;
  width: 100%;
  background-color: #ccc;
}
button {
  width: 100%!important;
  border-radius: 10rpx;
  margin: 10rpx 0;
}